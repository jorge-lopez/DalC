                    <TextBox Margin="30,80"  Text="que hce"  Background="Azure" FontSize="25"></TextBox>
                    <TextBox Margin="30,80"  Text="{Binding Path=BestFitted.city.name}"  Background="Azure" FontSize="25"></TextBox>

                    <ItemsControl ItemsSource="{Binding Nodes}">
