        <Grid Margin="0,461,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <StackPanel Orientation="Horizontal" >
                    <TextBox Margin="30,80"  Text="que hce"  Background="Azure" FontSize="25"></TextBox>
                    <TextBox Margin="30,80"  Text="que hce"  Background="Azure" FontSize="25"></TextBox>
